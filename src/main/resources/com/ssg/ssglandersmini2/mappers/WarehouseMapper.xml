<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssg.ssglandersmini2.mappers.WarehouseMapper">

<!--    창고등록쿼리-->
    <insert id="insert">
        insert into warehouse(warehousetype, address, capacity, wname) values(#{warehousetype}, #{address}, #{capacity}, #{wname})
    </insert>

    <!--    창고목록조회 쿼리-->
    <select id="getAll" resultType="com.ssg.ssglandersmini2.domain.Warehouse">
        select * from warehouse order by wid;
    </select>

    <!--    창고하나 상세조회 쿼리-->
    <select id="getOne" resultType="com.ssg.ssglandersmini2.domain.Warehouse">
        select * from warehouse where wid = #{wid};;
    </select>

    <!--    창고삭제 쿼리-->
    <delete id="delete">
        delete from warehouse where wid = #{wid}
    </delete>

    <!--    창고수정 쿼리-->
    <update id="update">
        update warehouse set wname = #{wname}, warehousetype =  #{warehousetype}, address = #{address}, capacity = #{capacity}  where wid = #{wid}
    </update>

    <select id="selectList" resultType="com.ssg.ssglandersmini2.domain.Warehouse">
        select * from warehouse
            <where>
                <if test="types != null and types.length > 0">
                    <foreach collection="types" item="type" open="(" close=") " separator=" OR ">
                        <if test="type == 'type'.toString()">
                            warehousetype like concat('%', #{keyword}, '%')
                        </if>
                        <if test="type == 'address'.toString()">
                            address like concat('%', #{keyword}, '%')
                        </if>
                        <if test="type == 'all'.toString()">
                            address like concat('%', #{keyword}, '%') or warehousetype like concat('%', #{keyword},'%') or wname like concat('%', #{keyword}, '%')
                        </if>
                    </foreach>
                </if>
            </where>
            order by wid limit #{skip}, #{size}
        </select>

    <select id="getCount" resultType="int">
        select count(*) from warehouse
    </select>

</mapper>